#!/usr/bin/env node

const path = require("path");
const { argv } = require("process");
const PackageManager = require("../src");
const { install, uninstall } = require("../internal-handles/cmd");

const cwd = process.cwd();
let config = null;

try {
  config = require(path.resolve(cwd, "./.pmrc.js"));
} catch (error) {
  config = path.join(cwd, "./.pmrc.json");
}

const pm = new PackageManager({ config });

pm.load("install", install);
pm.load("uninstall", uninstall);

if (argv[2] === "run") {
  pm.exec(argv[3]);
} else {
  console.log("[pm-helper] pm run [handle]");
}
